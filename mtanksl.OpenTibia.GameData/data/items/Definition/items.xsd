      <xs:enumeration value="suppresspoison"/>
      <xs:enumeration value="transformDeEquipTo"/>
      <xs:enumeration value="transformEquipTo"/>
      <xs:enumeration value="type"/>
      <xs:enumeration value="writeOnceItemId"/>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>